<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Books Repository from <%= autor.name %> </title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
  <div class="container">
    <%- include('partials/header.ejs') %>
    <h1>Books Repository from <%= autor.name %> </h1>
      <div class="container">
        <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
          <%  if(book.estado == 2){ %>
          <% autor.books.forEach(function(book){ %>
            <div class="feature col">
              <div class="feature-icon bg-gradient">
                <img class="d-block mx-auto mb-4" src="<%= book.cover %>" alt="" width="172" height="257">
              </div>
              <h2>Book Title <%= book.title %> </h2>
              <p>Book description. <%= book.description %> </p>
              <a href="/books/detail/<%= book.id %>" class="icon-link">  Detail </a>  
            </div>

            </a> <% }) %>
        </div>


      </div>
  </div>
  </div>


  <%- include('partials/footer.ejs') %>
</body>

</html>